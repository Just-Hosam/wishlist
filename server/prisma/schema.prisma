generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Schema

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  age           Int?
  bio           String?
  accounts      Account[]
  sessions      Session[]
  games         Game[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Game Schema

enum GameCategory {
  WISHLIST
  LIBRARY
  COMPLETED
  ARCHIVED
}

enum Platform {
  NINTENDO
  PLAYSTATION
  PC
  XBOX
}

model Game {
  id                        String        @id @default(cuid())
  length                    Int?
  category                  GameCategory  @default(WISHLIST)
  platforms                 Platform[]
  nowPlaying                Boolean       @default(false)

  // IGDB metadata
  igdbId                    Int?
  igdbName                  String?      
  igdbSlug                  String?      
  igdbSummary               String?      @db.Text
  igdbCoverImageId          String?      
  igdbScreenshotIds         String[]     
  igdbVideoId               String?
  igdbVideoIds              String[]    
  igdbPlatformIds           Int[]        
  igdbFirstReleaseDate      Int?        
  igdbNintendoUrlSegment    String?
  igdbPlaystationUrlSegment String?
  igdbSteamUrlSegment       String?
  
  // Relationships
  userId                    String
  user                      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  trackedPrices             Price[]       @relation("TrackedPrices")
  
  // bookkeeping
  createdAt                 DateTime      @default(now())
  updatedAt                 DateTime      @updatedAt
  
  @@index([userId, category])
  @@index([igdbName])
  @@index([userId, createdAt])
  @@index([igdbId])
}

enum PriceDescription {
  STANDARD
  FREE_TO_PLAY
  PS_PLUS
  PS_PLUS_EXTRA
  PS_PLUS_PREMIUM
}

model Price {
  id            String   @id @default(cuid())

  // Fetching Data
  storeUrl      String   @unique 
  externalId    String?
  platform      Platform

  // Metadata
  description   PriceDescription?
  countryCode   String?  @db.Char(2)

  // Prices
  regularPrice  Float?
  currentPrice  Float?

  // Bookkeeping
  fetchedAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  // Relationships
  trackedBy     Game[]   @relation("TrackedPrices")

  @@index([platform, externalId])
}
